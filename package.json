{
  "name": "@tomsd/md-book",
  "version": "2.0.0",
  "description": "It provides .js that displays the contents from the markdown document files on page",
  "main": "public/js/index.js",
  "bin": {
    "mdbook": "bin/mdbook.js",
    "md-book": "bin/mdbook.js"
  },
  "files": [
    "bin",
    "public/css",
    "public/js"
  ],
  "scripts": {
    "build": "npm run build:bin && npm run build:client",
    "build:bin": "tsc --project tsconfig.bin.json",
    "build:client": "webpack",
    "lint": "biome check",
    "serve": "tsx doc_server",
    "dev": "npm run build && npm run serve",
    "prepare": "husky && playwright install",
    "test": "vitest"
  },
  "lint-staged": {
    "public/**/*.css": [
      "npm run lint"
    ],
    "src/bin/**/*.ts": [
      "npm run lint"
    ],
    "src/client/**/*.(ts|vue)": [
      "npm run lint"
    ],
    "src/client/**/*.css": [
      "npm run lint"
    ],
    "test/**/*.ts": [
      "npm run lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomsdoo/md-book.git"
  },
  "keywords": [
    "markdown"
  ],
  "author": "tom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomsdoo/md-book/issues"
  },
  "homepage": "https://github.com/tomsdoo/md-book#readme",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/koa": "2.15.0",
    "@vitest/browser": "3.2.4",
    "css-loader": "7.1.2",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "playwright": "1.54.1",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.2",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vitest": "3.2.4",
    "vue-loader": "17.4.2",
    "webpack": "5.100.2",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "@tomsd/github-repo": "2.7.0",
    "commander": "14.0.0",
    "destyle.css": "4.0.1",
    "fast-glob": "3.3.3",
    "highlight.js": "11.11.1",
    "koa": "3.0.1",
    "koa-router": "13.1.1",
    "koa-static-server": "1.5.2",
    "marked": "16.1.1",
    "vue": "3.5.17",
    "vue-router": "4.5.1"
  }
}
