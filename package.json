{
  "name": "@tomsd/md-book",
  "version": "1.2.0",
  "description": "It provides .js that displays the contents from the markdown document files on page",
  "main": "public/js/index.js",
  "bin": {
    "mdbook": "bin/mdbook.js",
    "md-book": "bin/mdbook.js"
  },
  "scripts": {
    "build": "npm run build:bin && npm run build:client",
    "build:bin": "tsc --project tsconfig.bin.json",
    "build:client": "webpack",
    "lint": "biome check",
    "serve": "ts-node doc_server",
    "dev": "npm run build && npm run serve",
    "prepare": "husky install",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"lib\": [\"esnext\", \"dom\"], \"module\":\"commonjs\"}' mocha -r ts-node/register \"test/**/*.ts\" --timeout 30000"
  },
  "lint-staged": {
    "public/**/*.css": [
      "npm run lint"
    ],
    "src/bin/**/*.ts": [
      "npm run lint"
    ],
    "src/client/**/*.(ts|vue)": [
      "npm run lint"
    ],
    "src/client/**/*.css": [
      "npm run lint"
    ],
    "test/**/*.ts": [
      "npm run lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomsdoo/md-book.git"
  },
  "keywords": [
    "markdown"
  ],
  "author": "tom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomsdoo/md-book/issues"
  },
  "homepage": "https://github.com/tomsdoo/md-book#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/chai": "4.3.3",
    "@types/commander": "2.12.2",
    "@types/jsdom": "20.0.0",
    "@types/koa": "2.13.5",
    "@types/marked": "4.0.7",
    "@types/mocha": "9.1.1",
    "@types/sinon": "10.0.13",
    "chai": "4.3.6",
    "css-loader": "6.7.1",
    "husky": "8.0.1",
    "jsdom": "20.0.0",
    "lint-staged": "13.0.3",
    "mocha": "10.0.0",
    "sinon": "14.0.0",
    "style-loader": "3.3.1",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.3",
    "vue-loader": "17.0.0",
    "vue-template-compiler": "2.7.10",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "dependencies": {
    "@tomsd/github-repo": "1.0.0",
    "commander": "9.4.0",
    "destyle.css": "3.0.2",
    "fast-glob": "3.3.1",
    "highlight.js": "11.6.0",
    "koa": "2.13.4",
    "koa-router": "12.0.0",
    "koa-static-server": "1.5.2",
    "marked": "4.1.0",
    "vue": "3.2.39",
    "vue-router": "4.1.5"
  }
}
