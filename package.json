{
  "name": "@tomsd/md-book",
  "version": "1.2.0",
  "description": "It provides .js that displays the contents from the markdown document files on page",
  "main": "public/js/index.js",
  "bin": {
    "mdbook": "bin/mdbook.js",
    "md-book": "bin/mdbook.js"
  },
  "scripts": {
    "build": "npm run build:bin && npm run build:client",
    "build:bin": "tsc --project tsconfig.bin.json",
    "build:client": "webpack",
    "lint": "biome check",
    "serve": "tsx doc_server",
    "dev": "npm run build && npm run serve",
    "prepare": "husky && playwright install",
    "test": "vitest"
  },
  "lint-staged": {
    "public/**/*.css": ["npm run lint"],
    "src/bin/**/*.ts": ["npm run lint"],
    "src/client/**/*.(ts|vue)": ["npm run lint"],
    "src/client/**/*.css": ["npm run lint"],
    "test/**/*.ts": ["npm run lint"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomsdoo/md-book.git"
  },
  "keywords": ["markdown"],
  "author": "tom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomsdoo/md-book/issues"
  },
  "homepage": "https://github.com/tomsdoo/md-book#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/commander": "2.12.2",
    "@types/koa": "2.15.0",
    "@vitest/browser": "2.1.5",
    "css-loader": "7.1.2",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "playwright": "1.49.0",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.1",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vitest": "2.1.5",
    "vue-loader": "17.4.2",
    "vue-template-compiler": "2.7.16",
    "webpack": "5.96.1",
    "webpack-cli": "5.1.4"
  },
  "dependencies": {
    "@tomsd/github-repo": "1.0.0",
    "commander": "9.4.0",
    "destyle.css": "4.0.1",
    "fast-glob": "3.3.2",
    "highlight.js": "11.10.0",
    "koa": "2.15.3",
    "koa-router": "13.0.1",
    "koa-static-server": "1.5.2",
    "marked": "15.0.2",
    "vue": "3.5.13",
    "vue-router": "4.1.5"
  }
}
